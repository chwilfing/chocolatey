{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build choco package",
            "type": "shell",
            "command": "choco pack",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Push choco package",
            "type": "shell",
            "command": "$apikey = Read-host 'APIKey';choco push $(Get-ChildItem *.nupkg | Sort-Object lastwritetime | Select-Object -Last 1).name -s https://push.chocolatey.org/ --api-key=$apiKey",
            "problemMatcher": []
        }
    ]
}