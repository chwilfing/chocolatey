    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build choco package",
            "type": "shell",
            "command": "choco pack",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "push choco package",
            "type": "shell",
            "command": "choco push azure-information-protection-client.nupkg -s https://chocolatey.org/ --api-key="

        }
    ]
}